<div class="container">
    <div class="row">
        {{!-- Center --}}
        <div class="col-md-12 text-center" id="top">
            {{!-- Insert an image from assets/images if I want to --}}
            <h1>Issa Burger!!!</h1>
        </div>
        {{!-- Half of column for uneaten --}}
        <div class="col-md-6 text-center" class="task">
            <div class="row">
                {{#each burger_data}}
                {{#unless this.devoured}}
                <div class="col-md-9 text center">
                    <pre>
                            {{this.id}}. {{this.burger_name}}
                        </pre>
                </div>
                <div class="col-md-3 text-center">
                    <form class="devour-form-button-size">
                        <input input type="hidden" class="burger_id" type="text" value={{this.id}}><br>
                        <button type="submit" class="btn btn-default">Devour it!</button>
                    </form>
                </div>
                {{/unless}}
                {{/each}}
            </div>
        </div>
        {{!-- Other half for devoured --}}
        <div class="col-md-6 text-center" class="task">
            {{#each burger_data}}
            {{#if this.devoured}}
            <input class="form-control" type="text" placeholder="{{this.id}} . {{this.burger_name}}" readonly>
            {{/if}}
            {{/each}}
        </div>
    </div>
</div>